   <title>PopTio</title>
   <style type="text/css">
   	#div1 {width:300px; height:100px; background:#CCC; border:1px solid #999; display:none; }
   </style>
   <script type="text/javascript">
   	function Pop_Out()
	{
		var div1=document.getElementById("div1");
		div1.style.display="block";
	}
	function Pop_In()
	{
		var div1=document.getElementById("div1");
		div1.style.display="None";
	}
   </script>
 </head>
 <body>
  <input type="checkbox" onmouseover="Pop_Out();" onmouseout="Pop_In();" />
  <div id="div1">For Your Information Secruity</div>
 </body>
